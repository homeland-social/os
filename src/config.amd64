ARCH=amd64
ALPINE_VERSION=3.18
ALPINE_MIRROR=http://dl-cdn.alpinelinux.org/alpine/

# Sizes in Megabytes, leave DATA_SIZE blank to grow
DISK_SIZE=3072
BOOT_SIZE=64
ROOT_SIZE=384
DATA_SIZE=

BOARD_NAME=virt
NET_WIFI=no
NET_ETH=e1000
PACKAGES_INSTALL="docker-cli docker-bash-completion"
SERVICES_ENABLE=
MODULES_LOAD=
DOCKER_PULL=busybox:latest

# mkrootfs.sh hooks:
HOOK_RUN_AFTER_APK=
HOOK_RUN_AFTER_FILES=

# mkimage.sh hooks:
HOOK_RUN_AFTER_LOSETUP=
HOOK_RUN_BEFORE_UMOUNT=
HOOK_RUN_BEFORE_TAR=
